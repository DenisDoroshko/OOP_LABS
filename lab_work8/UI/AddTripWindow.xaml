<Window x:Class="UI.AddTripWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="AddTripWindow" Height="545" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="icon.png">
    <Grid>
        <Grid Background="#FF2DCB3B">
            <StackPanel HorizontalAlignment="Left" Height="98" VerticalAlignment="Top" Width="792" Background="#FF168D26">
                <Label x:Name="mainLabel" Content="Trips adding" Height="97" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="30" RenderTransformOrigin="0.491,0.916" Width="792" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" OpacityMask="#FF1DC369"/>
            </StackPanel>
            <Button x:Name="star" Content="Back" HorizontalAlignment="Center" Margin="229,459,417,0" VerticalAlignment="Top" Width="148" Height="36" FontSize="20" FontWeight="Bold" Click="closeWindow_Click"/>
            <Label x:Name="numberTripLabel" Content="Select number of the trip" HorizontalAlignment="Left" Margin="34,122,0,0" VerticalAlignment="Top" Width="245" FontSize="20" FontWeight="Bold"/>
            <TextBox x:Name="firstPriceBox" HorizontalAlignment="Center" Height="31" Margin="349,286,349,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="96" FontSize="20" RenderTransformOrigin="0.934,0.971" PreviewTextInput="checkTextInput" MaxLength="5" FontWeight="Bold"/>
            <TextBox x:Name="secondPriceBox" HorizontalAlignment="Center" Height="31" Margin="349,327,349,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="96" FontSize="20" RenderTransformOrigin="0.934,0.971" PreviewTextInput="checkTextInput" MaxLength="5" FontWeight="Bold"/>
            <TextBox x:Name="thirdPriceBox" HorizontalAlignment="Center" Height="31" Margin="349,370,349,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="96" FontSize="20" RenderTransformOrigin="0.934,0.971" PreviewTextInput="checkTextInput" MaxLength="5" FontWeight="Bold"/>
            <TextBox x:Name="fourthPriceBox" HorizontalAlignment="Center" Height="31" Margin="349,412,349,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="96" FontSize="20" RenderTransformOrigin="0.934,0.971" PreviewTextInput="checkTextInput" MaxLength="5" FontWeight="Bold"/>
            <Button x:Name="addButton" Content="Add" HorizontalAlignment="Center" Margin="411,459,235,0" VerticalAlignment="Top" Width="148" Height="36" FontSize="20" FontWeight="Bold" Click="addButton_Click" RenderTransformOrigin="0.03,3"/>
            <Label x:Name="numberTripLabel_Copy" Content="Select departure" HorizontalAlignment="Left" Margin="34,164,0,0" VerticalAlignment="Top" Width="245" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="destinationLabel" Content="Select destination" HorizontalAlignment="Left" Margin="34,201,0,0" VerticalAlignment="Top" Width="245" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="firstPriceLabel" Content="Enter the price" HorizontalAlignment="Left" Margin="34,280,0,0" VerticalAlignment="Top" Width="288" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="thirdPriceLabel" Content="Enter the price" HorizontalAlignment="Left" Margin="34,364,0,0" VerticalAlignment="Top" Width="310" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="secondPriceLabel" Content="Enter the price" HorizontalAlignment="Left" Margin="34,327,0,0" VerticalAlignment="Top" Width="288" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="ticketsNumberLabel" Content="Enter tickets number" HorizontalAlignment="Left" Margin="34,238,0,0" VerticalAlignment="Top" Width="245" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="carriagesNumberLabel" Content="Enter carriages number" HorizontalAlignment="Left" Margin="431,240,0,0" VerticalAlignment="Top" Width="233" FontSize="20" FontWeight="Bold" Visibility="Hidden"/>
            <Label x:Name="fourthPriceLabel" Content="Enter the price" HorizontalAlignment="Left" Margin="34,406,0,0" VerticalAlignment="Top" Width="304" FontSize="20" FontWeight="Bold"/>
            <TextBox x:Name="destinationBox" HorizontalAlignment="Center" Height="31" Margin="349,207,349,0" TextWrapping="Wrap" Text="Minsk" VerticalAlignment="Top" Width="96" FontSize="20" RenderTransformOrigin="0.934,0.971" MaxLength="30" FontWeight="Bold"/>
            <TextBox x:Name="departureBox" HorizontalAlignment="Center" Height="31" Margin="349,168,349,0" TextWrapping="Wrap" Text="Gomel" VerticalAlignment="Top" Width="96" FontSize="20" RenderTransformOrigin="0.934,0.971" MaxLength="30" FontWeight="Bold"/>
            <TextBox x:Name="tripNumberBox" HorizontalAlignment="Center" Height="31" Margin="349,128,349,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="96" FontSize="20" RenderTransformOrigin="0.934,0.971" PreviewTextInput="checkTextInput" MaxLength="5" FontWeight="Bold"/>
            <TextBox x:Name="ticketsNumberBox" HorizontalAlignment="Center" Height="31" Margin="349,246,349,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="96" FontSize="20" RenderTransformOrigin="0.934,0.971" PreviewTextInput="checkTextInput" MaxLength="3" FontWeight="Bold"/>
            <TextBox x:Name="carriagesNumberBox" HorizontalAlignment="Center" Height="31" Margin="669,246,27,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="96" FontSize="20" RenderTransformOrigin="0.934,0.971" PreviewTextInput="checkTextInput" MaxLength="2" FontWeight="Bold" Visibility="Hidden"/>

        </Grid>

    </Grid>
</Window>
