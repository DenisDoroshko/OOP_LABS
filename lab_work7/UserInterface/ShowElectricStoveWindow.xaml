                <Label x:Name="mainLabel" Content="The flats with electric stove" Height="92" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" FontWeight="Bold" FontFamily="Verdana" Cursor="" Foreground="Black"/>
            </StackPanel>
            <ScrollViewer HorizontalAlignment="Left" Height="180" Margin="79,126,0,0" VerticalAlignment="Top" Width="659">
                <Label x:Name="showLabel" Content=" " HorizontalAlignment="Left" VerticalAlignment="Top" Width="673" FontSize="15" FontWeight="Bold"/>
            </ScrollViewer>
            <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Center" Margin="332,408,307,0" VerticalAlignment="Top" Width="133" Height="38" Background="#FF37B0E8" FontSize="20" FontWeight="Bold" Click="backButton_Click" BorderBrush="{x:Null}"/>

        </Grid>

    </Grid>
</Window>
